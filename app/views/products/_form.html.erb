
<div class="container">
        <!-- edit form column -->
        <div class="col-lg-12 text-lg-center">
            
            <br>
            <br>
        </div>
        <div class="col-lg-8 push-lg-4 personal-info">
             <%= form_with(model: product, local: true, class: "form-horizontal") do |form| %>
              <% if product.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

                  <ul>
                    <% product.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
                <div class="form-group row">
                    <%= form.label :supplier_name,class: "col-lg-3 col-form-label form-control-label" %>
                    <div class="col-lg-9">   
                         <%= form.text_field :supplier_name,class: "form-control" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :receipt_number,class: "col-lg-3 col-form-label form-control-label" %>
                    <div class="col-lg-9">   
                         <%= form.text_field :receipt_number,class: "form-control" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :name,class: "col-lg-3 col-form-label form-control-label" %>
                    <div class="col-lg-9">   
                         <%= form.text_field :name,class: "form-control" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :quantity,class: "col-lg-3 col-form-label form-control-label" %>
                    <div class="col-lg-9">   
                         <%= form.number_field :quantity,class: "form-control" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :location,class: "col-lg-3 col-form-label form-control-label" %>
                    <div class="col-lg-9">   
                         <%= form.text_field :location,class: "form-control" %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">                    
                        <%= link_to 'Back', products_path ,class: 'btn btn-secondary' %>
                        <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
                        
                    </div>
                </div>
            <% end %>
        </div>
        
