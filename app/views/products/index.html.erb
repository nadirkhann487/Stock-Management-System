<%= render 'layouts/header' %>


<br/>

<div class="row">

  <div class="media">
    <div class="media-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Supplier Name</th>
            <th>Date</th>
            <th>Receipt Number</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Location</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td style="text-align: center; vertical-align: middle;"><%= product.supplier_name %></td>
            <td style="text-align: center; vertical-align: middle;"><%= product.created_at.strftime("%Y-%m-%d") %></td>       
            <td style="text-align: center; vertical-align: middle;"><%= product.receipt_number %></td>
            <td style="text-align: center; vertical-align: middle;"><%= product.name %></td>
            <td style="text-align: center; vertical-align: middle;"><%= product.quantity %></td>
            <td style="text-align: center; vertical-align: middle;"><%= product.location %></td>
            <td><%= link_to 'Show', product, class: 'btn btn-primary' %></td>
            <% if current_user.user_type.downcase == "manager"  %> 
            <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Remove', product, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>


